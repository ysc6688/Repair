<div class="mybox">
<%= bootstrap_devise_error_messages! %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h4><%= t('.title1', :resource => resource_class.model_name.human , :default => '编 辑') %></h4>
  </div>
  <div class="panel-body">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
      <div class="form-group">
        <%= f.label :username, '用户名' %>
        <%= f.text_field :username, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password, '新密码' %> <i>(<%= t('.leave_blank_if_you_don_t_want_to_change_it1', :default => "如果您不想修改密码，请忽略它") %>)</i><br />
        <%= f.password_field :password, :autocomplete => "off", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, '确认新密码' %><br />
        <%= f.password_field :password_confirmation, class: "form-control"  %>
      </div>
      <div class="form-group">
        <%= f.label :current_password, '当前密码' %> <i>(<%= t('.we_need_your_current_password_to_confirm_your_changes1', :default => '请输入当前密码验证账户') %>)</i>
        <%= f.password_field :current_password, class: "form-control" %>
      </div>
      <%= f.submit t('.update1', :default => "更 新"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<p>
  <%= link_to "返回", :back %> &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp 
  <%= t('.unhappy1', :default => '不喜欢') %>? <%= link_to t('.cancel_my_account1', :default => "注销我的账户"), registration_path(resource_name), :data => { :confirm => t('.are_you_sure1', :default => "确定吗?") }, :method => :delete %>
</p>
</div>

