<%= bootstrap_devise_error_messages! %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h4><%= t('.resend_unlock_instructions', :default => "重新发送解锁邮件") %></h4>
  </div>
  <div class="panel-body">
    <%= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post, html: { role: "form" } }) do |f| %>
      <div class="form-group">
        <%= f.label :email, 'Email' %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
      <%= f.submit t('.resend_unlock_instructions', :default => "重新发送解锁邮件"), class: "btn btn-primary"%>
    <% end %>
  </div>
</div>
<%= render "devise/shared/links" %>
