<%= bootstrap_devise_error_messages! %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h4><%= t('.change_your_password', :default => '修改密码') %></h4>
  </div>
  <div class="panel-body">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, role: "form" }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :新密码, t('.new_password', :default => '新密码') %>
        <%= f.password_field :password, autofocus: true, class: "form-control"  %>
      </div>

      <div class="form-group">
        <%= f.label :确认新密码, t('.confirm_new_password', :default => '确认新密码') %>
        <%= f.password_field :password_confirmation, class: "form-control"  %>
      </div>

      <%= f.submit t('.change_my_password', :default => '修改密码'), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<%= render "devise/shared/links" %>
