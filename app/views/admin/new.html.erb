<div class="mybox">
<% if @admin.errors.any? %>
<div class="alert alert-danger" role="alert">
    <% @admin.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
</div>
<% end %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h4><%= t('.sign_up', :default => "分配新账户") %></h4>
  </div>
  <div class="panel-body">
    <%= form_for :admin, url: 'new' do |f| %>
      <div class="form-group">
        <%= f.label :username, '用户名' %>
        <%= f.text_field :username, autofocus: true, required: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password, '密码' %>
        <%= f.password_field :password, required: true  , class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, '确认密码' %>
        <%= f.password_field :password_confirmation, required: true  , class: "form-control" %>
      </div>
      <div clas="form-group">
        <%= f.label :role, '用户类型' %>
        <%= f.select(:role, [
            ['主管','manager'],
            ['维修员','repairman'],
        ], {}, { :class => "form-control"}) %>
      </div>
      <div class="form-group">
        <%= f.label :org, '部门' %>
        <%= f.select(:org, [
            ['网络中心','网络中心'],
            ['教务处','教务处'],
            ['后勤部门','后勤部门'],
            ['人事部门','人事部门'],
            ['财务处','财务处']
        ], {}, { :class => "form-control"}) %>
      </div>
      <%= f.submit t('.sign_up', :default => "提交"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
</div>
